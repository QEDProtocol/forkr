{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": ["node"],
    "lib": ["DOM", "ES2022"],
    "jsx": "react",
    "noEmit": false
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
